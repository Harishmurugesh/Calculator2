<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:gravity="right"
        android:text=""
        android:id="@+id/question"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"/>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        android:gravity="center"
        android:id="@+id/layer1"
        android:layout_below="@id/question">


        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="AC"
            android:textSize="30sp"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:background="#FF9800"
            android:id="@+id/textac"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/ic_baseline_backspace_24"
            android:cropToPadding="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/textback"
            android:background="#FF9800"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="%"
            android:textSize="30sp"
            android:paddingTop="10dp"
            android:background="#FF9800"
            android:textAlignment="center"
            android:id="@+id/textpercent"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="/"
            android:textSize="30sp"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:background="#FF9800"
            android:id="@+id/textdivide"/>


    </LinearLayout>


    <LinearLayout
        android:layout_marginBottom="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        android:gravity="center"
        android:id="@+id/layer2"
        android:layout_below="@id/layer1">


        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="7"
            android:textSize="30sp"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:id="@+id/text7"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="8"
            android:textSize="30sp"
            android:paddingTop="10dp"
            android:id="@+id/text8"
            android:textAlignment="center" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="9"
            android:textSize="30sp"
            android:paddingTop="10dp"
            android:id="@+id/text9"
            android:textAlignment="center" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="*"
            android:textSize="30sp"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:background="#FF9800"
            android:id="@+id/textmultiply"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        android:gravity="center"
        android:id="@+id/layer3"
        android:layout_below="@id/layer2">


        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="4"
            android:textSize="30sp"
            android:paddingTop="10dp"
            android:id="@+id/text4"
            android:textAlignment="center" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="5"
            android:textSize="30sp"
            android:paddingTop="10dp"
            android:id="@+id/text5"
            android:textAlignment="center" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="6"
            android:textSize="30sp"
            android:paddingTop="10dp"
            android:id="@+id/text6"
            android:textAlignment="center" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="-"
            android:textSize="30sp"
            android:id="@+id/textminus"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:background="#FF9800"/>


    </LinearLayout>



    <LinearLayout
        android:layout_marginBottom="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        android:gravity="center"
        android:id="@+id/layer4"
        android:layout_below="@id/layer3">


        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="1"
            android:textSize="30sp"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:id="@+id/text1"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="2"
            android:textSize="30sp"
            android:paddingTop="10dp"
            android:id="@+id/text2"
            android:textAlignment="center" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="3"
            android:textSize="30sp"
            android:paddingTop="10dp"
            android:id="@+id/text3"
            android:textAlignment="center" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="+"
            android:textSize="30sp"
            android:paddingTop="10dp"
            android:id="@+id/textplus"
            android:textAlignment="center"
            android:background="#FF9800"/>


    </LinearLayout>


    <LinearLayout
        android:layout_marginBottom="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        android:gravity="center"
        android:id="@+id/layer5"
        android:layout_below="@id/layer4">


        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/text00"
            android:text="00"
            android:textSize="30sp"
            android:paddingTop="10dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="0"
            android:id="@+id/text0"
            android:textSize="30sp"
            android:paddingTop="10dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="."
            android:id="@+id/textpoint"
            android:textSize="30sp"
            android:paddingTop="10dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="="
            android:id="@+id/textequal"
            android:textSize="30sp"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:background="#FF9800"/>


    </LinearLayout>


</RelativeLayout>